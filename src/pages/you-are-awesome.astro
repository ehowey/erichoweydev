---
import RawLayout from '~/components/layout/RawLayout.astro'

const ogImageURL = new URL(
  `/api/og-image/?title=${encodeURI('You are awesome')}`,
  Astro.site,
)
---

<RawLayout
  title="You are awesome"
  description="A page celebrating you! Yes you! You are a worthy person and I appreciate you. Thank-you for being you!"
  ogImageURL={ogImageURL}
>
  <main class="-mt-16 grid h-screen w-screen place-items-center p-4">
    <div>
      <h1
        class="text-5xl font-black uppercase leading-none text-zinc-100 md:text-6xl"
      >
        You are awesome<span class="ml-1"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="inline-block h-6 w-6 fill-sky-500 align-bottom"
          >
            <path
              d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z"
            ></path>
          </svg>
        </span>
      </h1>
      <div class="prose max-w-lg text-lg md:text-xl">
        <p>
          Thank-you for being awesome! I appreciate you and hope you are having
          a great day!
        </p>
        <p>What is one thing that made you smile today?</p>
        <p><a href="/">Back home &rarr;</a></p>
      </div>
    </div>
  </main>
</RawLayout>
