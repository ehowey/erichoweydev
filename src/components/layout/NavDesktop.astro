---
import { NAV } from '../../lib/constants'
---

<nav class="sticky top-0 hidden self-start lg:block">
  <ul
    class="flex flex-col gap-3 text-xl font-bold uppercase tracking-wide text-zinc-100"
  >
    {
      NAV.map((link) => (
        <li>
          <a
            href={link.href}
            class="rounded-r-lg py-2 pr-4 transition-all hover:bg-zinc-800 hover:text-sky-200 active:text-sky-500"
          >
            &mdash; {link.name}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
